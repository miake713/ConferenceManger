<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="top_update_count_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:shadowDy">-1.0</item>
    </style>

    <style name="setting_item_head">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_row_head</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50.0dip</item>
    </style>

    <style name="setting_checkbox">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_weight">0.0</item>
    </style>

    <style name="setting_item_center" parent="@style/setting_item_head">
        <item name="android:background">@drawable/bg_row_center</item>
        <item name="android:layout_marginTop">-0.5dip</item>
    </style>

    <style name="setting_item_end" parent="@style/setting_item_head">
        <item name="android:background">@drawable/bg_row_end</item>
        <item name="android:layout_marginTop">-0.5dip</item>
    </style>

    <style name="setting_item_text">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/setting_item_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
    </style>

    <style name="setting_copyright">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/setting_copyright</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="setting_release_info">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/setting_copyright</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
    </style>

    <style name="setting_hint_new">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:layout_weight">0.0</item>
    </style>

    <style name="item_image_gap">
        <item name="android:layout_width">15.0dip</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="text_on_button">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowRadius">0.0</item>
    </style>

    <style name="subscribe_flow_layout">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toolbar_action">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:minWidth">44.0dip</item>
        <item name="android:layout_weight">0.0</item>
    </style>

    <style name="full_image_retry_text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style name="full_image_progress_text">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffeeeeee</item>
    </style>
    
    <style name="title_bar_style">
        <item name="android:background">@drawable/bg_titlebar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44.0dip</item>
    </style>
    
    <style name="text_on_button"></style>

    <style name="common_button" parent="@style/text_on_button">
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">50.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>
 
    <style name="title_text_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
   
    <style name="title_bar_button" parent="@style/common_button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/btn_common_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">17.0dip</item>
        <item name="android:paddingRight">17.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="back_view" parent="@style/title_bar_button">
        <item name="android:gravity">right|center</item>
        <item name="android:background">@drawable/transparent</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:layout_marginRight">0.0dip</item>
        <item name="android:minHeight">44.0dip</item>
        <item name="android:text">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/btn_back</item>
        <item name="android:drawablePadding">0.0dip</item>
    </style>

</resources>